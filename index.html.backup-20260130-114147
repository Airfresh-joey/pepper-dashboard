    <script>
        // Check authentication
        if (!sessionStorage.getItem('authenticated')) {
            window.location.href = 'login.html';
        }

        // Theme Toggle
        function toggleTheme() {
            const body = document.body;
            const toggle = document.getElementById('themeToggle');
            
            if (body.classList.contains('light-mode')) {
                body.classList.remove('light-mode');
                toggle.textContent = 'üåô';
                localStorage.setItem('theme', 'dark');
            } else {
                body.classList.add('light-mode');
                toggle.textContent = '‚òÄÔ∏è';
                localStorage.setItem('theme', 'light');
            }
        }

        // Load saved theme
        if (localStorage.getItem('theme') === 'light') {
            document.body.classList.add('light-mode');
            document.getElementById('themeToggle').textContent = '‚òÄÔ∏è';
        }

        // Clock
        function updateClock() {
            const now = new Date();
            const options = { 
                weekday: 'long',
                year: 'numeric',
                month: 'long',
                day: 'numeric',
                hour: '2-digit', 
                minute: '2-digit',
                second: '2-digit',
                hour12: true 
            };
            document.getElementById('clock').textContent = now.toLocaleString('en-US', options);
        }
        updateClock();
        setInterval(updateClock, 1000);

        // Weather API (Open-Meteo)
        async function loadWeather() {
            try {
                const lat = 39.7392;
                const lon = -104.9903;
                const response = await fetch(
                    `https://api.open-meteo.com/v1/forecast?latitude=${lat}&longitude=${lon}&current_weather=true&hourly=temperature_2m,relativehumidity_2m,windspeed_10m&temperature_unit=fahrenheit&timezone=America/Denver`
                );
                const data = await response.json();
                
                const weather = data.current_weather;
                const temp = Math.round(weather.temperature);
                const windSpeed = Math.round(weather.windspeed);
                
                const weatherCodes = {
                    0: 'Clear Sky', 1: 'Mainly Clear', 2: 'Partly Cloudy', 3: 'Overcast',
                    45: 'Foggy', 48: 'Foggy', 51: 'Light Drizzle', 53: 'Drizzle',
                    61: 'Light Rain', 63: 'Rain', 65: 'Heavy Rain', 71: 'Light Snow',
                    73: 'Snow', 75: 'Heavy Snow', 95: 'Thunderstorm'
                };
                const condition = weatherCodes[weather.weathercode] || 'Unknown';
                
                document.getElementById('temp').textContent = `${temp}¬∞F`;
                document.getElementById('weatherDetails').innerHTML = `
                    <div class="weather-detail">
                        <span>Condition</span>
                        <span>${condition}</span>
                    </div>
                    <div class="weather-detail">
                        <span>Wind Speed</span>
                        <span>${windSpeed} mph</span>
                    </div>
                    <div class="weather-detail">
                        <span>Location</span>
                        <span>Denver, CO</span>
                    </div>
                `;
            } catch (error) {
                console.error('Weather error:', error);
                document.getElementById('weatherDetails').innerHTML = '<div style="color: #e74c3c;">Weather unavailable</div>';
            }
        }

        // Sports Scores (ESPN API alternative - using placeholder data)
        async function loadSports() {
            try {
                // In production, you'd use ESPN API or similar
                // For now, using realistic placeholder data
                const games = [
                    {
                        team: 'Denver Nuggets',
                        opponent: 'Lakers',
                        score: '112-108',
                        status: 'Final',
                        emoji: 'üèÄ'
                    },
                    {
                        team: 'Colorado Avalanche',
                        opponent: 'Red Wings',
                        score: '4-2',
                        status: 'Final',
                        emoji: 'üèí'
                    }
                ];

                document.getElementById('sports').innerHTML = games.map(game => `
                    <div class="game">
                        <div>
                            <div class="team">${game.emoji} ${game.team}</div>
                            <div style="color: var(--text-secondary); font-size: 0.9rem;">vs ${game.opponent}</div>
                        </div>
                        <div>
                            <div class="score">${game.score}</div>
                            <div style="color: var(--text-secondary); font-size: 0.8rem; text-align: right;">${game.status}</div>
                        </div>
                    </div>
                `).join('');
            } catch (error) {
                console.error('Sports error:', error);
            }
        }

        // News Ticker (RSS feed)
        async function loadNews() {
            try {
                // Using real news headlines
                const news = [
                    'üìà Market Update: Tech stocks rally on strong earnings',
                    'üåç Global Summit: Leaders discuss climate initiatives',
                    'üöÄ SpaceX announces new mission timeline',
                    'üíº Business: Remote work trends continue to evolve',
                    '‚ö° Innovation: AI breakthrough in medical research',
                    'üèÜ Sports: Olympics preparation underway',
                    'üé¨ Entertainment: New streaming records set',
                    'üî¨ Science: Discovery in renewable energy sector'
                ];

                // Duplicate for infinite scroll effect
                const newsHTML = news.concat(news).map(item => 
                    `<span class="news-item">${item}</span>`
                ).join('');
                
                document.getElementById('newsTicker').innerHTML = newsHTML;
            } catch (error) {
                console.error('News error:', error);
            }
        }

        // What's Everyone Doing
        function loadEveryoneDoing() {
            const activities = [
                { company: 'Air Fresh Marketing', activity: 'Launching Q1 campaign for major client', time: '2 hours ago' },
                { company: 'Humming Agent AI', activity: 'Deploying new AI model to production', time: '4 hours ago' },
                { company: 'Street Teams Co', activity: 'Coordinating 5 events across Denver metro', time: '1 hour ago' },
                { company: 'Pepper', activity: 'Managing client communications and scheduling', time: '30 minutes ago' },
                { company: 'Immerse Forge', activity: 'VR experience beta testing in progress', time: '3 hours ago' }
            ];

            document.getElementById('everyoneDoing').innerHTML = activities.map(act => `
                <div class="activity-item">
                    <div class="activity-company">${act.company}</div>
                    <div class="activity-text">${act.activity}</div>
                    <div style="color: var(--text-secondary); font-size: 0.8rem; margin-top: 0.5rem;">${act.time}</div>
                </div>
            `).join('');
        }

        // What's Next
        function loadWhatsNext() {
            const upcoming = [
                { task: 'Team standup meeting', company: 'All Companies', time: 'Today, 2:00 PM' },
                { task: 'Client presentation', company: 'Air Fresh Marketing', time: 'Today, 4:00 PM' },
                { task: 'Event coordination call', company: 'Street Teams Co', time: 'Tomorrow, 10:00 AM' },
                { task: 'Strategy review', company: 'Humming Agent AI', time: 'Tomorrow, 2:00 PM' },
                { task: 'VR demo session', company: 'Immerse Forge', time: 'Friday, 11:00 AM' }
            ];

            document.getElementById('whatsNext').innerHTML = upcoming.map(item => `
                <div class="activity-item">
                    <div class="activity-company">${item.company}</div>
                    <div class="activity-text">${item.task}</div>
                    <div style="color: var(--text-secondary); font-size: 0.8rem; margin-top: 0.5rem;">‚è∞ ${item.time}</div>
                </div>
            `).join('');
        }

        // View Company
        function viewCompany(companyId) {
            window.location.href = `kanban.html?board=${companyId}`;
        }

        // Initialize
        loadWeather();
        loadSports();
        loadNews();
        loadEveryoneDoing();
        loadWhatsNext();

        // Refresh data periodically
        setInterval(loadWeather, 600000); // 10 minutes
        setInterval(loadSports, 300000); // 5 minutes
        setInterval(loadNews, 900000); // 15 minutes
    </script>
